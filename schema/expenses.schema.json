{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ExpenseEntry",
  "type": "object",
  "properties": {
    "date": { "type": "string", "format": "date" },
    "partner": { "type": "string", "enum": ["דותן", "רפי"] },
    "category": {
      "type": "string",
      "enum": [
        "דלק",
        "ביטוח",
        "טיפול מנוע",
        "טיפול גוף סירה",
        "עגינה",
        "אנטיפאולים",
        "תיקון ציוד קיים",
        "קניית ציוד חדש",
        "שדרוגים",
        "שונות"
      ]
    },
    "amount": { "type": "number" },
    "description": { "type": "string" },
    "is_operational": { "type": "boolean" }
  },
  "required": ["date", "partner", "category", "amount"]
}
